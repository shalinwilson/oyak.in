<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sold_product_wizard_form" model="ir.ui.view">
        <field name="name">sold.product.wizard.form</field>
        <field name="model">sold.product.wizard</field>
        <field name="arch" type="xml">
            <form string="Most Sold Product">
                <sheet>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="limit"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="selection" widget='radio'/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_pdf_report" string="PDF Report"  type="object" class="btn-primary"/>
                    <button name="action_excel_report" string="EXCEL Report"  type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="most_sold_product_wizard_action" model="ir.actions.act_window">
        <field name="name">Most Sold Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sold.product.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>