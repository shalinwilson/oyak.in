<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="tt_checkout" inherit_id="payment.checkout">
        <xpath expr="." position="inside">
            <t t-call="wt_payment_cashfree.cashfree_assets"/>
        </xpath>
    </template>

    <template id="tt_manage" inherit_id="payment.manage">
        <xpath expr="." position="inside">
            <t t-call="wt_payment_cashfree.cashfree_assets"/>
        </xpath>
    </template>

    <template id="tt-express_checkout" inherit_id="payment.express_checkout">
        <xpath expr="." position="inside">
            <t t-call="wt_payment_cashfree.cashfree_assets"/>
        </xpath>
    </template>

    <template id="cashfree_assets">
        <script type="text/javascript" src="https://sdk.cashfree.com/js/v3/cashfree.js"></script>
    </template>

</odoo>
