<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="payment_provider_form" model="ir.ui.view">
		<field name="name">provider.form.cashfree</field>
		<field name="model">payment.provider</field>
		<field name="inherit_id" ref="payment.payment_provider_form" />
		<field name="arch" type="xml">
			<group name="provider_credentials" position='inside'>
				<group attrs="{'invisible': [('code', '!=', 'cashfree')]}">

					<field name="cashfree_app_id" attrs="{'required': [('code', '=', 'cashfree'), ('state', '!=', 'disabled')]}"/>

					<field name="cashfree_secret_key" attrs="{'required': [('code', '=', 'cashfree'), ('state', '!=', 'disabled')]}"/>
				</group>
			</group>
		</field>
	</record>
</odoo>